{
  "name": "root",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules **/*/node_modules",
    "build:mater": "lerna run --stream --sort build",
    "commit": "git cz",
    "release": "pnpm build:master && lerna publish",
    "release:beta": "pnpm build:master && lerna publish --canary"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/node": "^17.0.8",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.3",
    "cz-customizable": "^6.3.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.7",
    "typescript": "^4.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
